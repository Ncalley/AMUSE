<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.amuse</groupId>
  <artifactId>Amuse-maven</artifactId>
  <version>0.3.2-SNAPSHOT</version>
  <name>Amuse-maven</name>
  <description>The version of amuse project using maven</description>
  
  <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		
		<!-- Dependencies versions -->
		<version.jama>1.0.3</version.jama>
		<version.xmlpull>1.1.3.4d_b4_min</version.xmlpull>
		<version.log4j>1.2.17</version.log4j>
		<version.miglayout>3.7</version.miglayout>
		<version.tritonous-share>0.3.7.4</version.tritonous-share>
		<version.xercesImpl>2.12.0</version.xercesImpl>
		<version.xpp3>1.1.3.4.O</version.xpp3>
		<version.xstream>1.4.11.1</version.xstream>
		<version.commons-codec>1.11</version.commons-codec>
		<version.jhall>2.0</version.jhall>
		<version.jlfgr>1_0</version.jlfgr>
		<version.weka-stable>3.6.14</version.weka-stable>
		<version.javafx-base>11.0.1</version.javafx-base>
		<version.nd4j-native-platform>1.0.0-beta3</version.nd4j-native-platform>
		<version.datavec-api>1.0.0-beta3</version.datavec-api>
		<version.deeplearning4j-core>1.0.0-beta3</version.deeplearning4j-core>
		<version.deeplearning4j-keras>0.9.1</version.deeplearning4j-keras>
		<version.deeplearning4j-nn>1.0.0-beta3</version.deeplearning4j-nn>
		<version.deeplearning4j-modelimport>1.0.0-beta3</version.deeplearning4j-modelimport>
		<version.jaudio>5.0</version.jaudio>
		<version.jl>1.0</version.jl>
		<version.rapidminer>5.3.015</version.rapidminer>
		<version.junit-jupiter>5.4.0</version.junit-jupiter>
  </properties>

	
  <dependencies>
  	<!-- https://mvnrepository.com/artifact/gov.nist.math/jama -->
	<dependency>
	    <groupId>gov.nist.math</groupId>
	    <artifactId>jama</artifactId>
	    <version>${version.jama}</version>
	</dependency>
  	<!-- https://mvnrepository.com/artifact/xmlpull/xmlpull -->
	<dependency>
	    <groupId>xmlpull</groupId>
	    <artifactId>xmlpull</artifactId>
	    <version>${version.xmlpull}</version>
	</dependency>
	
	
	<!-- https://mvnrepository.com/artifact/log4j/log4j -->
	<dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>${version.log4j}</version>
      
    </dependency>
	<!-- https://mvnrepository.com/artifact/com.miglayout/miglayout -->
	<dependency>
	    <groupId>com.miglayout</groupId>
	    <artifactId>miglayout</artifactId>
	    <version>${version.miglayout}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/com.googlecode.soundlibs/tritonus-share -->
	<dependency>
	    <groupId>com.googlecode.soundlibs</groupId>
	    <artifactId>tritonus-share</artifactId>
	    <version>${version.tritonous-share}</version>
	</dependency>

	<!-- https://mvnrepository.com/artifact/xerces/xercesImpl -->
	<dependency>
	    <groupId>xerces</groupId>
	    <artifactId>xercesImpl</artifactId>
	    <version>${version.xercesImpl}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/xpp3/xpp3 -->
	<dependency>
	    <groupId>xpp3</groupId>
	    <artifactId>xpp3</artifactId>
	    <version>${version.xpp3}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/com.thoughtworks.xstream/xstream -->
	<dependency>
	    <groupId>com.thoughtworks.xstream</groupId>
	    <artifactId>xstream</artifactId>
	    <version>${version.xstream}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/commons-codec/commons-codec -->
	<dependency>
	    <groupId>commons-codec</groupId>
	    <artifactId>commons-codec</artifactId>
	    <version>${version.commons-codec}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/com.sun.woodstock.dependlibs/jhall -->
	<dependency>
	    <groupId>com.sun.woodstock.dependlibs</groupId>
	    <artifactId>jhall</artifactId>
	    <version>${version.jhall}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/net.java.linoleum/jlfgr -->
	<dependency>
	    <groupId>net.java.linoleum</groupId>
	    <artifactId>jlfgr</artifactId>
	    <version>${version.jlfgr}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/nz.ac.waikato.cms.weka/weka-stable -->
	<dependency>
	    <groupId>nz.ac.waikato.cms.weka</groupId>
	    <artifactId>weka-stable</artifactId>
	    <version>${version.weka-stable}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.openjfx/javafx-base -->
	<dependency>
	    <groupId>org.openjfx</groupId>
	    <artifactId>javafx-base</artifactId>
	    <version>${version.javafx-base}</version>
	</dependency>
	
	<!-- Keras related dependencies -->
	<!-- https://mvnrepository.com/artifact/org.nd4j/nd4j-native-platform -->
	<dependency>
	    <groupId>org.nd4j</groupId>
	    <artifactId>nd4j-native-platform</artifactId>
	    <version>${version.nd4j-native-platform}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.datavec/datavec-api -->
	<dependency>
	    <groupId>org.datavec</groupId>
	    <artifactId>datavec-api</artifactId>
	    <version>${version.datavec-api}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.deeplearning4j/deeplearning4j-core -->
	<dependency>
	    <groupId>org.deeplearning4j</groupId>
	    <artifactId>deeplearning4j-core</artifactId>
	    <version>${version.deeplearning4j-core}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.deeplearning4j/deeplearning4j-keras -->
	<dependency>
	    <groupId>org.deeplearning4j</groupId>
	    <artifactId>deeplearning4j-keras</artifactId>
	    <version>${version.deeplearning4j-keras}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.deeplearning4j/deeplearning4j-nn -->
	<dependency>
	    <groupId>org.deeplearning4j</groupId>
	    <artifactId>deeplearning4j-nn</artifactId>
	    <version>${version.deeplearning4j-nn}</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.deeplearning4j/deeplearning4j-modelimport -->
	<dependency>
	    <groupId>org.deeplearning4j</groupId>
	    <artifactId>deeplearning4j-modelimport</artifactId>
	    <version>${version.deeplearning4j-modelimport}</version>
	</dependency>
	
	<!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-api -->
	<dependency>
	    <groupId>org.junit.jupiter</groupId>
	    <artifactId>junit-jupiter-api</artifactId>
	    <version>${version.junit-jupiter}</version>
	    <scope>test</scope>
	</dependency>
	
	<!-- The three custom libraries -->
	<dependency>
		<groupId>com.xerces.jaudio</groupId>
		<artifactId>jaudio</artifactId>
		<version>${version.jaudio}</version>
		<scope>system</scope>
		<systemPath>${basedir}/lib/jAudio.jar</systemPath>
	</dependency>
	<dependency>
		<groupId>com.apache.jl</groupId>
		<artifactId>jl</artifactId>
		<version>${version.jl}</version>
		<scope>system</scope>
		<systemPath>${basedir}/lib/jl1.0.jar</systemPath>
	</dependency>
	<dependency>
		<groupId>com.apache.rapidminer</groupId>
		<artifactId>rapidminer</artifactId>
		<version>${version.rapidminer}</version>
		<scope>system</scope>
		<systemPath>${basedir}/lib/rapidminer.jar</systemPath>
	</dependency>
		
  </dependencies>
  
  
  <build>
  	<plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>amuse.scheduler.gui.controller.WizardController</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
      	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
        	<execution>
        		<phase>package</phase>
        		<goals>
        			<goal>shade</goal>
        		</goals>
        		<configuration>
        			<transformers>
        				<transformer
        					implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
        					<mainClass>amuse.scheduler.gui.controller.WizardController</mainClass>
        				</transformer>
        			</transformers>
        		</configuration>
        	</execution>
        </executions>
      </plugin>
    </plugins>
   </build>
   
</project>