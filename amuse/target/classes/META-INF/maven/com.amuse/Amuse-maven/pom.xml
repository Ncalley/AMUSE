<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.amuse</groupId>
  <artifactId>Amuse-maven</artifactId>
  <version>0.2.1-SNAPSHOT</version>
  <name>Amuse-maven</name>
  <description>The version of amuse project using maven</description>
  
  <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
    </properties>

	
  <dependencies>
  	<!-- https://mvnrepository.com/artifact/gov.nist.math/jama -->
	<dependency>
	    <groupId>gov.nist.math</groupId>
	    <artifactId>jama</artifactId>
	    <version>1.0.3</version>
	</dependency>
  	<!-- https://mvnrepository.com/artifact/xmlpull/xmlpull -->
	<dependency>
	    <groupId>xmlpull</groupId>
	    <artifactId>xmlpull</artifactId>
	    <version>1.1.3.4d_b4_min</version>
	</dependency>
	
	
	<!-- https://mvnrepository.com/artifact/log4j/log4j -->
	<dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.16</version>
      
    </dependency>
	<!-- https://mvnrepository.com/artifact/com.miglayout/miglayout -->
	<dependency>
	    <groupId>com.miglayout</groupId>
	    <artifactId>miglayout</artifactId>
	    <version>3.7</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.tritonus/tritonus-share -->
	<!-- <dependency>
	    <groupId>org.tritonus</groupId>
	    <artifactId>tritonus-share</artifactId>
	    <version>0.3.6</version>
	</dependency> -->
	<!-- https://mvnrepository.com/artifact/com.googlecode.soundlibs/tritonus-share -->
	<dependency>
	    <groupId>com.googlecode.soundlibs</groupId>
	    <artifactId>tritonus-share</artifactId>
	    <version>0.3.7.4</version>
	</dependency>

	<!-- https://mvnrepository.com/artifact/xerces/xercesImpl -->
	<dependency>
	    <groupId>xerces</groupId>
	    <artifactId>xercesImpl</artifactId>
	    <version>2.12.0</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/xpp3/xpp3 -->
	<dependency>
	    <groupId>xpp3</groupId>
	    <artifactId>xpp3</artifactId>
	    <version>1.1.3.4.O</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/com.thoughtworks.xstream/xstream -->
	<dependency>
	    <groupId>com.thoughtworks.xstream</groupId>
	    <artifactId>xstream</artifactId>
	    <version>1.4.11.1</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/commons-codec/commons-codec -->
	<dependency>
	    <groupId>commons-codec</groupId>
	    <artifactId>commons-codec</artifactId>
	    <version>1.11</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/com.sun.woodstock.dependlibs/jhall -->
	<dependency>
	    <groupId>com.sun.woodstock.dependlibs</groupId>
	    <artifactId>jhall</artifactId>
	    <version>2.0</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/net.java.linoleum/jlfgr -->
	<dependency>
	    <groupId>net.java.linoleum</groupId>
	    <artifactId>jlfgr</artifactId>
	    <version>1_0</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/nz.ac.waikato.cms.weka/weka-stable -->
	<dependency>
	    <groupId>nz.ac.waikato.cms.weka</groupId>
	    <artifactId>weka-stable</artifactId>
	    <version>3.6.14</version>
	</dependency>
	<!-- https://mvnrepository.com/artifact/org.openjfx/javafx-base -->
	<dependency>
	    <groupId>org.openjfx</groupId>
	    <artifactId>javafx-base</artifactId>
	    <version>11.0.1</version>
	</dependency>
	
	<!-- The three custom libraries -->
	<dependency>
		<groupId>com.xerces.jaudio</groupId>
		<artifactId>jaudio</artifactId>
		<version>5.0</version>
		<scope>system</scope>
		<systemPath>${basedir}/lib/jAudio.jar</systemPath>
	</dependency>
	<dependency>
		<groupId>com.apache.jl</groupId>
		<artifactId>jl</artifactId>
		<version>1.0</version>
		<scope>system</scope>
		<systemPath>${basedir}/lib/jl1.0.jar</systemPath>
	</dependency>
	<dependency>
		<groupId>com.apache.rapidminer</groupId>
		<artifactId>rapidminer</artifactId>
		<version>5.3.015</version>
		<scope>system</scope>
		<systemPath>${basedir}/lib/rapidminer.jar</systemPath>
	</dependency>
		
  </dependencies>
  
  
  <build>
  	<plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>amuse.scheduler.gui.controller.WizardController</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
      	<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
        	<execution>
        		<phase>package</phase>
        		<goals>
        			<goal>shade</goal>
        		</goals>
        		<configuration>
        			<transformers>
        				<transformer
        					implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
        					<mainClass>amuse.scheduler.gui.controller.WizardController</mainClass>
        				</transformer>
        			</transformers>
        		</configuration>
        	</execution>
        </executions>
      </plugin>
    </plugins>
   </build>
   
</project>